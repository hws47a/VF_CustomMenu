<config>
    <modules>
        <Osme_CustomMenu>
            <version>0.1.0</version>
        </Osme_CustomMenu>
    </modules>
    <global>
        <blocks>
            <menu>
                <class>Osme_CustomMenu_Block</class>
            </menu>
        </blocks>
        <models>
            <menu>
                <class>Osme_CustomMenu_Model</class>
                <resourceModel>menu_resource</resourceModel>
            </menu>
            <menu_resource>
                <class>Osme_CustomMenu_Model_Resource</class>
                <entities>
                    <menu>
                        <table>osme_custom_menu</table>
                    </menu>
                </entities>
            </menu_resource>
        </models>
        <resources>
            <osme_custommenu_setup>
                <setup>
                    <module>Osme_CustomMenu</module>
                    <connection>core_setup</connection>
                </setup>
            </osme_custommenu_setup>
        </resources>
        <helpers>
            <menu>
                <class>Osme_CustomMenu_Helper</class>
            </menu>
        </helpers>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <custom_menu before="Mage_Adminhtml">Osme_CustomMenu_Adminhtml</custom_menu>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <layout>
            <updates>
                <menu>
                    <file>menu.xml</file>
                </menu>
            </updates>
        </layout>
    </adminhtml>
</config>

